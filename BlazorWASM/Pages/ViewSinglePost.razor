@page "/ViewSinglePost"
@page "/ViewSinglePost/{PostId:int}"
@using Domain
@using HttpClients.ClientInterfaces
@inject IPostService PostService

@if (!string.IsNullOrEmpty(msg))
{
    <div>
        <span>@msg</span>
    </div>
}

@if (post == null)
{
    <span>Loading..</span>
}

else
{
    <div>
        <div>
            <label><b>@post.Title</b></label>
        </div>
        <p>u/@post.Owner.Username</p>
        <div>
            <p>@post.BodyText</p>
        </div>
    </div>
}

@code {
    [Parameter] 
    public int postId { get; set; }
    
    private string msg = "";
    private Post post;
    
    protected override async Task OnInitializedAsync()
    {
        msg = "";
        try
        {
            post = await PostService.GetPostById(postId);
        }
        catch (Exception e)
        {
            Console.WriteLine(e);
            msg = e.Message;
        }
    }
    
}