@page "/CreatePost"
@using HttpClients.ClientInterfaces
@using Domain.DTOs
@using HttpClients.Implementations
@using BlazorWasm.Services
@inject IPostService postService

<AuthorizeView>

    <div>
        <h3>Create Post</h3>
        <div>
                <label>Title:</label><br/>
                <input type="text" @bind="title" @bind:event="oninput"/>
            </div>
            <div>
                <label>Content:</label><br/>
                <input style="height: 5rem" type="text" @bind="body" @bind:event="oninput"/>
                @if (!string.IsNullOrEmpty(msg))
                {
                    <label style="color: @color">@msg</label>
                }
                </div>    
            <div><br/>
                <button @onclick="Create" disabled="@(string.IsNullOrEmpty(title) || string.IsNullOrEmpty(body))" class="acceptbtn">Create</button>
            </div>
    </div>
</AuthorizeView>

@code {
    private string title = "";
    private string body = "";
    private string owner = "";

    private string msg = "";
    private string color = "";

    private async Task Create()
    {
        owner = JwtAuthService.Username;
        Console.WriteLine(owner);
        try
        {
            msg = "";
            await postService.CreatePost(new CreatePostDto(owner, title, body));
            title = "";
            body = "";
            msg = "Post created!";
            color = "green";
        }
        catch (Exception e)
        {
            Console.WriteLine(e);
            msg = e.Message;
            color = "red";
        }
    }

}